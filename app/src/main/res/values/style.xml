<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="tv_main_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="tv_page_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="tv_page_sub_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="tv_content_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>
    <style name="tv_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>
    <!-- Button -->
    <style name="btn_main_page">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="btn_item_note">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
    </style>
    <style name="btn_negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>
    <style name="btn_positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>
    <!-- Other -->
    <style name="item_note">
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@color/background_item</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="item_about_title" parent="tv_content_title"></style>
    <style name="item_about_content" parent="tv_content">
        <item name="android:gravity">center</item>
    </style>
    <style name="alert_dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:gravity">center</item>
        <item name="background">@color/light_yellow</item>
        <item name="buttonBarPositiveButtonStyle">@style/btn_positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/btn_negative</item>
    </style>
</resources>